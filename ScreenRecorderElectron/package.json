{
    "name": "screen-recorder-electron",
    "version": "1.0.4",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
        "electron:build": "vite build && electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "Screen Recorder using Electron and React",
    "repository": {
        "type": "git",
        "url": "https://github.com/Anujch8889/ScreenRecorder.git"
    },
    "dependencies": {
        "ffmpeg-static": "^5.3.0",
        "fluent-ffmpeg": "^2.1.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.0.0",
        "concurrently": "^8.0.0",
        "electron": "^25.0.0",
        "electron-builder": "^26.4.0",
        "vite": "^4.3.0",
        "wait-on": "^7.0.0"
    },
    "build": {
        "appId": "com.himan.screenrecorder",
        "productName": "Screen Recorder",
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "mac": {
            "target": [
                "zip",
                "dir"
            ],
            "category": "public.app-category.video",
            "identity": null,
            "icon": "assets/icon.png",
            "extendInfo": {
                "NSCameraUsageDescription": "This app needs access to the camera to record your video overlay.",
                "NSMicrophoneUsageDescription": "This app needs access to the microphone to record your voice commentary."
            }
        },
        "linux": {
            "target": "AppImage"
        },
        "asarUnpack": [
            "**/node_modules/ffmpeg-static/*"
        ]
    }
}